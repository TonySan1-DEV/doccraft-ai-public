# DocCraft-AI Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AI Services
OPENAI_API_KEY=sk-proj-your-openai-key-here

# External APIs
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Optional Configuration
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_VOICE_FEATURES=true
VITE_MONITORING_ENABLED=false
VITE_MONITORING_SAMPLE=0
VITE_MONITORING_REPORT=false
VITE_MONITORING_REPORT_URL=/api/monitor/error

# Build Configuration
NODE_ENV=production
VITE_APP_ENV=production

# Server-side Configuration (for local development)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
JWT_SECRET=your-jwt-secret-here
DATABASE_URL=postgresql://user:password@localhost:5432/doccraft
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
MONITORING_REPORT_ENABLED=false
MONITORING_REPORT_SAMPLE=1
MONITORING_LOG_ERRORS=false
MONITORING_PERSIST_ENABLED=false
MONITORING_PERSIST_SAMPLE=0.25
MONITORING_RETENTION_DAYS=30

# Note: For Vercel deployment, these variables should be configured in the Vercel dashboard
# under Project Settings > Environment Variables
