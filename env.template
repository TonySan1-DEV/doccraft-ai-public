# DocCraft AI Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# FEATURE FLAGS (default: OFF for security)
# =============================================================================

# Enable audiobook/TTS functionality
# Set to 'true' to enable audio export endpoints
FEATURE_AUDIOBOOK=false

# Enable agentics/autonomous agent functionality  
# Set to 'true' to enable agentics endpoints
FEATURE_AGENTICS=false

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# OpenAI API key for TTS and other AI services
# Required when FEATURE_AUDIOBOOK=true
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# INTERNAL SECURITY
# =============================================================================

# Internal maintenance token for admin operations
# Required when FEATURE_AGENTICS=true
INTERNAL_MAINT_TOKEN=your-secure-maintenance-token-here

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase service key (alternative to service role)
SUPABASE_SERVICE_KEY=your-service-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 1234)
PORT=8000

# Frontend origin for CORS (SSE endpoints)
# Set this if your frontend is served from a different origin
FRONTEND_ORIGIN=http://localhost:3000

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Metrics collection token (for /metrics endpoint)
METRICS_TOKEN=your-metrics-token-here

# Enable monitor persistence with Supabase
MONITORING_PERSIST_ENABLED=false

# Monitor retention period in days (default: 30)
MONITORING_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Node environment
NODE_ENV=development

# Enable verbose logging
DEBUG=false

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel deployment flag
VERCEL=0

# CI environment flag
CI=false

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env
# 2. Set feature flags to 'true' only in environments where you need them
# 3. Never commit .env files to version control
# 4. Use different tokens/keys for different environments
# 5. For production, use strong, unique tokens and rotate regularly

# =============================================================================
# QUICK START FOR LOCAL DEVELOPMENT
# =============================================================================

# Minimal setup for local development:
# FEATURE_AUDIOBOOK=false
# FEATURE_AGENTICS=false
# SUPABASE_URL=your-supabase-url
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# To enable features locally:
# FEATURE_AUDIOBOOK=true
# FEATURE_AGENTICS=true
# OPENAI_API_KEY=sk-...
# INTERNAL_MAINT_TOKEN=dev-secret
