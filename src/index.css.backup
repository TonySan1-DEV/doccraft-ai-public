/* Button styles */
.btn {
  @apply px-4 py-2 rounded-lg font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2;
}

.btn-primary {
  background: linear-gradient(
    135deg,
    var(--color-primary),
    var(--color-secondary)
  );
  color: white;
  @apply font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200;
  border: none;
}

.btn-primary:hover {
  background: linear-gradient(
    135deg,
    var(--color-secondary),
    var(--color-primary)
  );
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
}

.btn-primary:focus {
  --tw-ring-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(var(--color-primary), 0.3);
}

.btn-secondary {
  background-color: var(--color-surface);
  color: var(--color-text);
  border: 2px solid var(--color-border);
  @apply font-medium shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200;
}

.btn-secondary:hover {
  background-color: var(--color-accent);
  border-color: var(--color-primary);
  transform: translateY(-1px);
}

.btn-secondary:focus {
  --tw-ring-color: var(--color-primary);
  border-color: var(--color-primary);
}

/* Enhanced CTA button for sign-in */
.btn-cta {
  background: linear-gradient(135deg, #3b82f6, #1e40af);
  color: white;
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border: none;
  box-shadow: 0 4px 15px -3px rgba(0, 0, 0, 0.2);
}

.btn-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left 0.6s;
}

.btn-cta:hover::before {
  left: 100%;
}

.btn-cta:hover {
  background: linear-gradient(135deg, #1e40af, #3b82f6);
  transform: translateY(-1px);
  box-shadow: 0 6px 20px -5px rgba(0, 0, 0, 0.25);
}

.btn-cta:focus {
  outline: none;
  box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.4);
}

/* Enhanced page animations */
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  0% {
    opacity: 0;
    transform: translateX(-30px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  0% {
    opacity: 0;
    transform: translateX(30px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Apply entrance animations to page sections */
.features-section {
  animation: fadeInUp 1s ease-out;
}

.features-title {
  animation: slideInLeft 1s ease-out 0.2s both;
}

.features-subtitle {
  animation: slideInRight 1s ease-out 0.4s both;
}

.cta-section {
  animation: scaleIn 1s ease-out 0.6s both;
}

/* Enhanced hover effects for interactive elements */
.interactive-element {
  @apply transition-all duration-300 ease-out;
}

.interactive-element:hover {
  @apply transform scale-105;
}

/* Smooth scrolling for the entire page */
html {
  scroll-behavior: smooth;
}

/* Enhanced focus states for accessibility */
.btn:focus,
.feature-card:focus {
  @apply outline-none ring-2 ring-blue-500 ring-offset-2;
}

/* Dark mode enhancements */
@media (prefers-color-scheme: dark) {
  .feature-card {
    background: linear-gradient(
      135deg,
      rgba(31, 41, 55, 0.8),
      rgba(17, 24, 39, 0.9)
    );
    backdrop-filter: blur(10px);
  }

  .feature-card:hover {
    background: linear-gradient(
      135deg,
      rgba(31, 41, 55, 0.9),
      rgba(17, 24, 39, 1)
    );
  }
}

