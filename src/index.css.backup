/* Ensure smooth theme transitions */
* {
  transition:
    color 0.3s ease,
    background-color 0.3s ease,
    border-color 0.3s ease;
}

/* Page layout theme coordination */
.page-theme {
  background-color: var(--color-background);
  color: var(--color-text);
}

.page-theme .container {
  background-color: var(--color-background);
}

.page-theme .card {
  background-color: var(--color-surface);
  border-color: var(--color-border);
  color: var(--color-text);
}

.page-theme .section {
  background-color: var(--color-surface);
  border-color: var(--color-border);
}

/* Ensure theme colors are applied to common elements */
.theme-coordinated {
  color: var(--color-text);
  background-color: var(--color-background);
}

.theme-coordinated h1,
.theme-coordinated h2,
.theme-coordinated h3,
.theme-coordinated h4,
.theme-coordinated h5,
.theme-coordinated h6 {
  color: var(--color-text);
}

.theme-coordinated p {
  color: var(--color-text);
}

.theme-coordinated a {
  color: var(--color-primary);
}

.theme-coordinated a:hover {
  color: var(--color-secondary);
}

/* Force theme colors on all elements */
.theme-active {
  --color-primary: var(--color-primary) !important;
  --color-secondary: var(--color-secondary) !important;
  --color-accent: var(--color-accent) !important;
  --color-background: var(--color-background) !important;
  --color-surface: var(--color-surface) !important;
  --color-text: var(--color-text) !important;
  --color-border: var(--color-border) !important;
}

/* Ensure theme colors are applied to the document root */
:root {
  --color-primary: #3b82f6;
  --color-secondary: #1e40af;
  --color-accent: #dbeafe;
  --color-background: #ffffff;
  --color-surface: #f8fafc;
  --color-text: #1e293b;
  --color-border: #e2e8f0;
}

/* Dark mode overrides */
.dark {
  --color-primary: #60a5fa;
  --color-secondary: #3b82f6;
  --color-accent: #1e3a8a;
  --color-background: #0f172a;
  --color-surface: #1e293b;
  --color-text: #f1f5f9;
  --color-border: #334155;
}

/* Force theme colors on body and html */
html,
body {
  --color-primary: var(--color-primary) !important;
  --color-secondary: var(--color-secondary) !important;
  --color-accent: var(--color-accent) !important;
  --color-background: var(--color-background) !important;
  --color-surface: var(--color-surface) !important;
  --color-text: var(--color-text) !important;
  --color-border: var(--color-border) !important;
}

/* ===== MISSING CSS ANIMATIONS AND BUTTON CLASSES ===== */
/* These classes are referenced in components but were missing from CSS */

/* Grid Movement Animation */
@keyframes gridMove {
  0% {
    transform: translate(0, 0);
    opacity: 0.3;
  }
  100% {
    transform: translate(40px, 40px);
    opacity: 0.3;
  }
}

.animate-gridMove {
  animation: gridMove 20s linear infinite;
}

/* Safety fallback for reduced motion */
@media (prefers-reduced-motion: reduce) {
  .animate-gridMove {
    animation: none;
  }
}

/* CTA Button Classes - Referenced in Home.tsx but missing */
.cta-button-primary {
  @apply inline-flex items-center px-8 py-4 bg-white text-blue-600 font-semibold rounded-lg transition-all duration-300 text-lg shadow-lg;
}

.cta-button-primary:hover {
  @apply bg-gray-50 shadow-xl transform -translate-y-0.5;
}

.cta-button-secondary {
  @apply inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg transition-all duration-300 text-lg backdrop-blur-sm;
}

.cta-button-secondary:hover {
  @apply bg-white text-blue-600;
}

/* Enhanced button animations */
.cta-button-primary,
.cta-button-secondary {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.cta-button-primary:active,
.cta-button-secondary:active {
  transform: translateY(0) scale(0.98);
}

/* Focus states for accessibility */
.cta-button-primary:focus,
.cta-button-secondary:focus {
  @apply outline-none ring-2 ring-blue-500 ring-offset-2;
}

/* Loading states */
.cta-button-primary:disabled,
.cta-button-secondary:disabled {
  @apply opacity-50 cursor-not-allowed transform-none;
}
