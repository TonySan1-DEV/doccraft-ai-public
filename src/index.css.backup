@tailwind base;
@tailwind components;
@tailwind utilities;

/* Ensure root element is visible */
#root {
  min-height: 100vh;
  background-color: #f8fafc; /* Fallback background */
}

@layer base {
  * {
    @apply border-gray-200;
  }

  body {
    background-color: var(--color-background);
    color: var(--color-text);
    font-feature-settings:
      'rlig' 1,
      'calt' 1;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  /* Theme CSS Variables - These will be dynamically updated by JavaScript */
  :root {
    --color-primary: #3b82f6;
    --color-secondary: #1e40af;
    --color-accent: #dbeafe;
    --color-background: #ffffff;
    --color-surface: #f8fafc;
    --color-text: #1e293b;
    --color-border: #e2e8f0;
  }

  /* Dark mode overrides */
  .dark {
    --color-primary: #60a5fa;
    --color-secondary: #3b82f6;
    --color-accent: #1e3a8a;
    --color-background: #0f172a;
    --color-surface: #1e293b;
    --color-text: #f1f5f9;
    --color-border: #334155;
  }

  /* Apply theme colors to common elements */
  .bg-primary {
    background-color: var(--color-primary);
  }

  .bg-secondary {
    background-color: var(--color-secondary);
  }

  .bg-accent {
    background-color: var(--color-accent);
  }

  .bg-surface {
    background-color: var(--color-surface);
  }

  .text-primary {
    color: var(--color-primary);
  }

  .text-secondary {
    color: var(--color-secondary);
  }

  .text-theme {
    color: var(--color-text);
  }

  .border-theme {
    border-color: var(--color-border);
  }

  /* Enhanced theme color applications */
  .bg-gradient-primary {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
  }

  .bg-gradient-accent {
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-primary)
    );
  }

  .text-gradient-primary {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    display: inline-block;
  }

  .border-primary {
    border-color: var(--color-primary);
  }

  .border-secondary {
    border-color: var(--color-secondary);
  }

  .ring-primary {
    --tw-ring-color: var(--color-primary);
  }

  .ring-secondary {
    --tw-ring-color: var(--color-secondary);
  }

  .shadow-primary {
    box-shadow: 0 4px 14px 0 rgba(var(--color-primary), 0.25);
  }

  .shadow-secondary {
    box-shadow: 0 4px 14px 0 rgba(var(--color-secondary), 0.25);
  }

  /* Hover states with theme colors */
  .hover\:bg-primary:hover {
    background-color: var(--color-primary);
  }

  .hover\:bg-secondary:hover {
    background-color: var(--color-secondary);
  }

  .hover\:text-primary:hover {
    color: var(--color-primary);
  }

  .hover\:text-secondary:hover {
    color: var(--color-secondary);
  }

  .hover\:border-primary:hover {
    border-color: var(--color-primary);
  }

  .hover\:border-secondary:hover {
    border-color: var(--color-secondary);
  }

  /* Focus states with theme colors */
  .focus\:ring-primary:focus {
    --tw-ring-color: var(--color-primary);
  }

  .focus\:ring-secondary:focus {
    --tw-ring-color: var(--color-secondary);
  }

  .focus\:border-primary:focus {
    border-color: var(--color-primary);
  }

  .focus\:border-secondary:focus {
    border-color: var(--color-secondary);
  }

  /* Additional theme color applications */
  .bg-theme-primary {
    background-color: var(--color-primary);
  }

  .bg-theme-secondary {
    background-color: var(--color-secondary);
  }

  .bg-theme-accent {
    background-color: var(--color-accent);
  }

  .bg-theme-surface {
    background-color: var(--color-surface);
  }

  .text-theme-primary {
    color: var(--color-primary);
  }

  .text-theme-secondary {
    color: var(--color-secondary);
  }

  .border-theme-primary {
    border-color: var(--color-primary);
  }

  .border-theme-secondary {
    border-color: var(--color-secondary);
  }

  /* Theme-aware gradients */
  .bg-gradient-theme {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
  }

  .bg-gradient-theme-reverse {
    background: linear-gradient(
      135deg,
      var(--color-secondary),
      var(--color-primary)
    );
  }

  /* Theme-aware shadows */
  .shadow-theme {
    box-shadow: 0 4px 14px 0 rgba(var(--color-primary), 0.15);
  }

  .shadow-theme-lg {
    box-shadow: 0 10px 25px -5px rgba(var(--color-primary), 0.2);
  }

  /* Theme-aware hover effects */
  .hover\:bg-theme-primary:hover {
    background-color: var(--color-primary);
  }

  .hover\:bg-theme-secondary:hover {
    background-color: var(--color-secondary);
  }

  .hover\:text-theme-primary:hover {
    color: var(--color-primary);
  }

  .hover\:text-theme-secondary:hover {
    color: var(--color-secondary);
  }

  .hover\:border-theme-primary:hover {
    border-color: var(--color-primary);
  }

  .hover\:border-theme-secondary:hover {
    border-color: var(--color-secondary);
  }

  /* Theme-aware focus effects */
  .focus\:ring-theme-primary:focus {
    --tw-ring-color: var(--color-primary);
  }

  .focus\:ring-theme-secondary:focus {
    --tw-ring-color: var(--color-secondary);
  }

  .focus\:border-theme-primary:focus {
    border-color: var(--color-primary);
  }

  .focus\:border-theme-secondary:focus {
    border-color: var(--color-secondary);
  }
}

@layer utilities {
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-100 rounded-full;
}

::-webkit-scrollbar-thumb {
  @apply bg-gray-300 rounded-full hover:bg-gray-400;
}

/* Smooth transitions for all interactive elements */
* {
  transition-property:
    color, background-color, border-color, text-decoration-color, fill, stroke,
    opacity, box-shadow, transform, filter, backdrop-filter;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}

/* Glass morphism effect */
.glass {
  @apply bg-white/20 backdrop-blur-lg border border-white/20;
}

/* Gradient text */
.gradient-text {
  @apply bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 bg-clip-text text-transparent;
}

/* Brand name gradient text */
.text-gradient-primary {
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  color: transparent;
}

/* Custom focus styles */
.focus-ring {
  @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white;
}

/* Button hover effects */
.btn-hover {
  @apply transform transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg;
}

/* Card hover effects */
.card-hover {
  @apply transform transition-all duration-300 hover:-translate-y-1 hover:shadow-xl;
}

/* Floating animation */
@keyframes float {
  0%,
  100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

/* Pulse glow effect */
@keyframes pulse-glow {
  0%,
  100% {
    box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
  }
  50% {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.8);
  }
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* Loading spinner */
.spinner {
  @apply animate-spin rounded-full border-4 border-gray-200 border-t-blue-600;
}

/* Gradient borders */
.gradient-border {
  background:
    linear-gradient(white, white) padding-box,
    linear-gradient(45deg, #3b82f6, #8b5cf6, #06b6d4) border-box;
  border: 2px solid transparent;
}

/* Text shimmer effect */
@keyframes shimmer {
  0% {
    background-position: -200px 0;
  }
  100% {
    background-position: calc(200px + 100%) 0;
  }
}

.text-shimmer {
  background: linear-gradient(90deg, #374151 0%, #6b7280 50%, #374151 100%);
  background-size: 200px 100%;
  background-repeat: no-repeat;
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: shimmer 2s infinite;
}

