/* Feature card hover effects */
.feature-card {
  @apply relative overflow-hidden bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-xl transition-all duration-500 ease-out;
  transform-style: preserve-3d;
  perspective: 1000px;
  animation: cardEntrance 0.8s ease-out forwards;
  opacity: 0;
  border: 1px solid transparent;
  position: relative;
}

.feature-card::after {
  content: '';
  @apply absolute inset-0 rounded-2xl opacity-0 transition-opacity duration-500;
  background: radial-gradient(
    circle at center,
    rgba(59, 130, 246, 0.1) 0%,
    transparent 70%
  );
  pointer-events: none;
}

.feature-card:hover::after {
  @apply opacity-100;
}

.feature-card:nth-child(1) {
  animation-delay: 0.1s;
}
.feature-card:nth-child(2) {
  animation-delay: 0.2s;
}
.feature-card:nth-child(3) {
  animation-delay: 0.3s;
}
.feature-card:nth-child(4) {
  animation-delay: 0.4s;
}
.feature-card:nth-child(5) {
  animation-delay: 0.5s;
}
.feature-card:nth-child(6) {
  animation-delay: 0.6s;
}

.feature-card:hover {
  @apply shadow-2xl;
  transform: translateY(-12px) rotateX(3deg) scale(1.05);
  box-shadow:
    0 25px 50px -12px rgba(0, 0, 0, 0.25),
    0 0 0 1px rgba(59, 130, 246, 0.2),
    0 0 0 4px rgba(59, 130, 246, 0.1),
    0 0 40px rgba(59, 130, 246, 0.2);
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.95),
    rgba(248, 250, 252, 0.95)
  );
  border: 1px solid rgba(59, 130, 246, 0.2);
  z-index: 10;
}

.dark .feature-card:hover {
  background: linear-gradient(
    135deg,
    rgba(31, 41, 55, 0.95),
    rgba(17, 24, 39, 0.95)
  );
}

.feature-card::before {
  content: '';
  @apply absolute inset-0 opacity-0 transition-opacity duration-500;
  background: linear-gradient(
    135deg,
    transparent 0%,
    rgba(59, 130, 246, 0.08) 25%,
    rgba(99, 102, 241, 0.15) 50%,
    rgba(59, 130, 246, 0.08) 75%,
    transparent 100%
  );
  background-size: 200% 200%;
  animation: cardShine 3s ease-in-out infinite;
}

.feature-card:hover::before {
  @apply opacity-100;
}

.feature-card-icon {
  @apply w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-all duration-500;
  transform-style: preserve-3d;
}

.feature-card:hover .feature-card-icon {
  transform: scale(1.2) rotateY(20deg);
  box-shadow: 0 0 30px rgba(59, 130, 246, 0.6);
  filter: brightness(1.1);
}

.feature-card-title {
  @apply text-2xl font-bold mb-4 transition-all duration-300;
}

.feature-card:hover .feature-card-title {
  @apply text-blue-600 dark:text-blue-400;
  transform: translateX(10px) scale(1.02);
  text-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  letter-spacing: 0.5px;
}

.feature-card-description {
  @apply text-gray-600 dark:text-gray-300 mb-6 transition-all duration-300;
}

.feature-card:hover .feature-card-description {
  @apply text-gray-700 dark:text-gray-200;
  transform: translateX(6px) scale(1.01);
  line-height: 1.6;
}

.feature-card-list {
  @apply space-y-2;
}

.feature-card-list li {
  @apply flex items-center transition-all duration-300;
  animation: listItemSlide 0.5s ease-out forwards;
  opacity: 0;
}

.feature-card-list li:nth-child(1) {
  animation-delay: 0.1s;
}
