{
  "dashboard": {
    "id": null,
    "title": "DocCraft-AI Production Dashboard",
    "tags": ["doccraft-ai", "production", "ai-writing"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"doccraft-ai\"}",
            "legendFormat": "Service Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "AI Service Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ai_requests_total[5m])",
            "legendFormat": "{{service}} - {{operation}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 5,
        "title": "AI Service Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ai_latency_seconds_bucket[5m]))",
            "legendFormat": "{{service}} - {{operation}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "ai_cache_hit_rate",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Security Threat Level",
        "type": "gauge",
        "targets": [
          {
            "expr": "security_threat_level",
            "legendFormat": "Threat Level"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 0.5 },
                { "color": "red", "value": 0.8 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 16 }
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "doccraft_memory_usage_bytes{type=\"heapUsed\"} / 1024 / 1024",
            "legendFormat": "Heap Used (MB)"
          },
          {
            "expr": "doccraft_memory_usage_bytes{type=\"rss\"} / 1024 / 1024",
            "legendFormat": "RSS (MB)"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 9,
        "title": "User Engagement",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_engagement_total[5m])",
            "legendFormat": "{{event_type}} - {{feature}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 10,
        "title": "Document Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(document_operations_total[5m])",
            "legendFormat": "{{operation}} - {{type}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 }
      },
      {
        "id": 11,
        "title": "Character AI Interactions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(character_interactions_total[5m])",
            "legendFormat": "{{interaction_type}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 }
      },
      {
        "id": 12,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "5xx Error Rate"
          },
          {
            "expr": "rate(ai_errors_total[5m])",
            "legendFormat": "AI Errors"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 40 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
