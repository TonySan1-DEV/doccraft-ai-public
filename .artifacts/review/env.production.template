# DocCraft AI Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
API_URL=https://api.doccraft-ai.com
ANALYTICS_ID=your-analytics-id

# Frontend Configuration (VITE_* variables)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_UNSPLASH_ACCESS_KEY=your-unsplash-access-key
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_VOICE_FEATURES=true
VITE_APP_ENV=production
VITE_MONITORING_ENABLED=false
VITE_MONITORING_SAMPLE=0

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
API_RATE_LIMIT=1000

# Database Configuration
DATABASE_URL=postgresql://doccraft:${POSTGRES_PASSWORD}@postgres:5432/doccraft
POSTGRES_DB=doccraft
POSTGRES_USER=doccraft
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=your-secure-redis-password

# AI Processing Configuration
PROCESSOR_QUEUE=ai-tasks
MAX_CONCURRENT_TASKS=5

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password
VITE_MONITORING_ENABLED=false
VITE_MONITORING_REPORT=false
VITE_MONITORING_REPORT_URL=/api/monitor/error
VITE_MONITORING_SAMPLE=0
MONITORING_REPORT_ENABLED=false
MONITORING_PERSIST_ENABLED=false
MONITORING_PERSIST_SAMPLE=0
MONITORING_RETENTION_DAYS=30

# SSL Certificate Paths (for Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/doccraft-ai.crt
SSL_KEY_PATH=/etc/nginx/ssl/doccraft-ai.key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Performance Tuning
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=64

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=stdout

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_MONITORING=true
ENABLE_BACKUP=true
ENABLE_SSL=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Caching Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_UPDATE_TTL_ON_GET=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT_MS=60000
DB_POOL_IDLE_TIMEOUT_MS=30000

# Redis Connection Pool
REDIS_POOL_MIN=1
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE_TIMEOUT_MS=30000
REDIS_POOL_IDLE_TIMEOUT_MS=30000

# AI Model Configuration
AI_MODEL_NAME=gpt-4
AI_MODEL_MAX_TOKENS=4000
AI_MODEL_TEMPERATURE=0.7
AI_MODEL_TIMEOUT_MS=300000

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md
UPLOAD_STORAGE_PATH=/app/uploads
UPLOAD_TEMP_PATH=/app/temp

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@doccraft-ai.com

# CDN Configuration (if using CDN)
CDN_URL=https://cdn.doccraft-ai.com
CDN_API_KEY=your-cdn-api-key

# Load Balancer Configuration
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30
LOAD_BALANCER_HEALTH_CHECK_TIMEOUT=5
LOAD_BALANCER_HEALTH_CHECK_HEALTHY_THRESHOLD=2
LOAD_BALANCER_HEALTH_CHECK_UNHEALTHY_THRESHOLD=3

# Auto-scaling Configuration
AUTO_SCALE_MIN_REPLICAS=2
AUTO_SCALE_MAX_REPLICAS=10
AUTO_SCALE_TARGET_CPU_UTILIZATION=70
AUTO_SCALE_TARGET_MEMORY_UTILIZATION=80

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Debug Mode (should be false in production)
DEBUG_MODE=false
DEBUG_LOG_LEVEL=error

# Custom Headers
CUSTOM_HEADERS_X_POWERED_BY=DocCraft AI
CUSTOM_HEADERS_X_VERSION=3.0.0
CUSTOM_HEADERS_X_BUILD_DATE=2024-01-01

# API Versioning
API_VERSION=v3
API_DEPRECATION_WARNING_DAYS=90

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE_MS=86400000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# CORS Configuration
CORS_ORIGIN=https://doccraft-ai.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Headers
SECURITY_HEADERS_HSTS_MAX_AGE=31536000
SECURITY_HEADERS_HSTS_INCLUDE_SUBDOMAINS=true
SECURITY_HEADERS_HSTS_PRELOAD=true
SECURITY_HEADERS_CONTENT_SECURITY_POLICY_STRICT=true

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_COLLECTION_INTERVAL=15000

# Alerting Configuration
ALERTING_ENABLED=true
ALERTING_SLACK_CHANNEL=#alerts
ALERTING_PAGERDUTY_SERVICE=your-service
ALERTING_EMAIL_RECIPIENTS=admin@doccraft-ai.com

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Disaster Recovery
DR_ENABLED=true
DR_REPLICATION_INTERVAL=300
DR_FAILOVER_TIMEOUT=600
DR_AUTO_FAILOVER=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SLOW_QUERY_THRESHOLD_MS=1000
PERFORMANCE_MEMORY_USAGE_THRESHOLD_PERCENT=90
PERFORMANCE_CPU_USAGE_THRESHOLD_PERCENT=80

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_SERVICE=sentry
ERROR_TRACKING_DSN=your-sentry-dsn
ERROR_TRACKING_ENVIRONMENT=production

# User Analytics
USER_ANALYTICS_ENABLED=true
USER_ANALYTICS_SERVICE=mixpanel
USER_ANALYTICS_TOKEN=your-mixpanel-token
USER_ANALYTICS_TRACK_EVENTS=true

# A/B Testing
AB_TESTING_ENABLED=false
AB_TESTING_SERVICE=optimizely
AB_TESTING_PROJECT_ID=your-project-id

# Feature Rollout
FEATURE_ROLLOUT_ENABLED=true
FEATURE_ROLLOUT_SERVICE=launchdarkly
FEATURE_ROLLOUT_SDK_KEY=your-sdk-key

# Compliance and Privacy
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555
DATA_ANONYMIZATION_ENABLED=true

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true
AUDIT_LOG_COMPRESSION=true
